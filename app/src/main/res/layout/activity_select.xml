<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwithoutlogo">

    <include layout="@layout/header_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Employement status "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>


        <TextView
            android:id="@+id/salary_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Salaried"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/txtview_bg"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/selfemp_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Self-employed"
            android:textAllCaps="true"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/txtview_bg"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"
/>



    </LinearLayout>

</RelativeLayout>
</layout>